@using Dominio;
@using Dominio.Enumeraciones
@model Vuelo  


<h1>Finaliza tu compra</h1>

@if (ViewBag.Mensaje != null)
{
<p>@ViewBag.Mensaje</p>
}
<h2>Datos de vuelo</h2>
<h3>Vuelo @Model.NumVuelo</h3>
<h4>Frecuencia: @string.Join(", ", @Model.Frecuencia)</h4>
<h4>Ruta: @Model.Ruta.ToString()</h4>
<h4>Avion: @Model.Avion.Modelo</h4>
<form method="post">
		<input type="hidden" name="numVuelo" value="@Model.NumVuelo" />

	<label>Fecha del vuelo:</label><br>
	<input type="date" name="fechaPasaje" ><br>

	<label>Tipo de equipaje:</label><br>
	<select name="equipaje">
		<option value="">Seleccione el tipo de equipaje</option>
		@foreach (Equipaje tipo in ViewBag.TiposEquipaje)
		{
			<option value="@((int)tipo)">@tipo.ToString()</option>
		}

	</select><br><br />
	<button type="submit">COMPRAR PASAJE</button>
</form><br />

@if (ViewBag.Exito != null)
{
	<p>@ViewBag.Exito</p>
	<br />
	<a href="/Cliente/MisPasajes">Mis pasajes</a>
}

