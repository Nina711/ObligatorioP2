@using Dominio.Entidades_no_abst;
@model List<Pasaje>

<h1>Mis Pasajes</h1>

@if (Model == null || Model.Count == 0)
{
	<p>Usted aún no ha comprado pasajes.</p>
	<a href="/Vuelo/Index">Comprar pasajes</a>
}
else
{
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Fecha y hora</th>
				<th>Vuelo</th>
				<th>Ruta</th>

				<th>Tipo de equipaje</th>
				<th>Precio del pasaje</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Pasaje p in Model)
			{
				<tr>
					<td>@p.Fecha.ToString("dd/MM/yyyy hh:mm")</td>
					<td>@p.Vuelo.NumVuelo</td>
					<td>@p.Vuelo.Ruta.ToString()</td>
					<td>@p.Equipaje</td>
					<td>@p.PrecioPasaje.ToString("C")</td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/Vuelo/Index">Volver</a>
}

