@using Dominio.Entidades_no_abst;
@using Dominio.Enumeraciones;

<h1>Vuelos</h1>
<table>
	<thead>
		<tr>
			<th>Número de avión</th>
			<th>Origen</th>
			<th>Destino</th>
			<th>Avión</th>
			<th>Frecuencia</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Vuelo vuelo in ViewBag.Vuelos)
		{
			<tr>
				<td>@vuelo.NumVuelo</td>
				<td>@vuelo.Ruta.AeropuertoSalida.Ciudad</td>
				<td>@vuelo.Ruta.AeropuertoLlegada.Ciudad</td>
				<td>@vuelo.Avion.Fabricante @vuelo.Avion.Modelo </td>
				@*aca hay que ver si el profe dio otra manera de joinear los elementos de la lista en Razor*@
				<td>@string.Join(", ", vuelo.Frecuencia)</td>
				<td><a href="/Pasaje/Comprar?numVuelo=@vuelo.NumVuelo" class="btn btn-primary">Comprar pasaje</a></td>
			</tr>
		}
	</tbody>
</table>

